{
	"validator": {
		"$jsonSchema": {
			"type": "object",
			"required": [
				"_id",
				"name",
				"terms"
			],
			"properties": {
				"_id": {
					"type": "string",
					"pattern": "^RDB[A-Z]{7}[0-9]{5}$"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"terms": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": ["term_id", "order"],
						"properties": {
							"term_id": {
								"type": "string",
								"pattern": "^RDB[A-Z]{7}[0-9]{5}$"
							},
							"order": {
								"type": "number"
							}
						},
						"additionalProperties": false
					}
				},
				"schemaVersion": {
					"type": "number"
				}
			},
			"additionalProperties": false
		}
	},
	"validationLevel": "strict",
	"validationAction": "error"
}