{
	"validator": {
		"$jsonSchema": {
			"bsonType": "object",
			"required": [
				"_id",
				"name",
				"type",
				"products",
				"organism_id",
				"schemaVersion"
			],
			"properties": {
				"_id": {
					"bsonType": "string"
				},
				"name": {
					"bsonType": "string"
				},
				"type": {
					"bsonType": "string",
					"enum": ["transcription-factor", "srna", "ppgpp"]
				},
				"siteLength": {
					"bsonType": "array",
					"items": {
						"bsonType": "int"
					}
				},
				"consensusSequence": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "string"
					}
				},
				"symmetry": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "string",
						"enum": [
							"asymmetric",
							"inverted-repeat",
							"direct-repeat"
						]
					}
				},
				"note": {
					"bsonType": "string"
				},
				"products": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "object",
						"required": ["product_id"],
						"properties": {
							"product_id": {
								"bsonType": "string"
							},
							"coefficient": {
								"bsonType": "int"
							}
						},
						"additionalProperties": false
					}
				},
				"synonyms": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "string"
					}
				},
				"evidenceReferences": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "object",
						"anyOf": [{
							"required": ["publication_id"]
						}, {
							"required": ["evidence_id"]
						}],
						"properties": {
							"publication_id": {
								"bsonType": "string"
							},
							"evidence_id": {
								"bsonType": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"externalCrossReferences": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "object",
						"required": [
							"externalCrossReference_id",
							"objectId"
						],
						"properties": {
							"externalCrossReference_id": {
								"bsonType": "string"
							},
							"objectId": {
								"bsonType": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"organism_id": {
					"bsonType": "string"
				},
				"internalComment": {
					"bsonType": "string"
				},
				"schemaVersion": {
					"bsonType": "double"
				}
			},
			"additionalProperties": false
		}
	},
	"validationLevel": "strict",
	"validationAction": "error"
}