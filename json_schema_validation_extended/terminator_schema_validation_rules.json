{
	"validator": {
		"$jsonSchema": {
			"bsonType": "object",
			"required": [
				"_id",
				"transcriptionTerminationSite",
				"sequence",
				"class",
				"schemaVersion"
			],
			"properties": {
				"_id": {
					"bsonType": "string"
				},
				"transcriptionTerminationSite": {
					"bsonType": "object",
					"required": ["leftEndPosition", "rightEndPosition", "type"],
					"properties": {
						"leftEndPosition": {
							"bsonType": "int"
						},
						"rightEndPosition": {
							"bsonType": "int"
						},
						"range": {
							"bsonType": "int"
						},
						"type": {
							"bsonType": "string",
							"enum": ["primary", "secondary", "tertiary"]
						}
					},
					"additionalProperties": false
				},
				"sequence": {
					"bsonType": "string",
					"pattern": "^[ATCGatcg]+$"
				},
				"class": {
					"bsonType": "string",
					"enum": [
						"rho-independent",
						"rho-dependent"
					]
				},
				"note": {
					"bsonType": "string"
				},
				"evidenceReferences": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "object",
						"anyOf": [{
							"required": ["publication_id"]
						}, {
							"required": ["evidence_id"]
						}],
						"properties": {
							"publication_id": {
								"bsonType": "string"
							},
							"evidence_id": {
								"bsonType": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"externalCrossReferences": {
					"bsonType": "array",
					"uniqueItems": true,
					"items": {
						"bsonType": "object",
						"required": [
							"externalCrossReference_id",
							"objectId"
						],
						"properties": {
							"externalCrossReference_id": {
								"bsonType": "string"
							},
							"objectId": {
								"bsonType": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"organism_id": {
					"bsonType": "string"
				},
				"internalComment": {
					"bsonType": "string"
				},
				"schemaVersion": {
					"bsonType": "double"
				}
			},
			"additionalProperties": false
		}
	},
	"validationLevel": "strict",
	"validationAction": "error"
}