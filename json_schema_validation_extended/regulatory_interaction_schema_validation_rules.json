{
	"validator": {
		"$jsonSchema": {
			"type": "object",
			"required": [
				"_id",
				"regulatedEntity",
				"conformation_id",
				"organism_id",
				"schemaVersion"
			],
			"properties": {
				"_id": {
					"type": "string"
				},
				"centerPosition": {
					"type": "number"
				},
				"function": {
					"type": "string",
					"enum": [
						"activator",
						"repressor",
						"dual"
					]
				},
				"type": {
					"type": "string",
					"enum": [
						"mechanistic",
						"physiological"
					]
				},
				"note": {
					"type": "string"
				},
				"bindingSite": {
					"type": "object",
					"properties": {
						"absolutePosition": {
							"type": "number"
						},
						"leftEndPosition": {
							"type": "number"
						},
						"rightEndPosition": {
							"type": "number"
						},
						"sequence": {
							"type": "string",
							"pattern": "^[ATCGatcg]+$"
						},
						"length": {
							"type": "number"
						},
						"note": {
							"type": "string"
						},
						"internalComment": {
							"type": "string"
						},
						"evidenceReferences": {
							"type": "array",
							"uniqueItems": true,
							"items": {
								"type": "object",
								"anyOf": [{
									"required": ["publication_id"]
								}, {
									"required": ["evidence_id"]
								}],
								"properties": {
									"publication_id": {
										"type": "string"
									},
									"evidence_id": {
										"type": "string"
									}
								},
								"additionalProperties": false
							}
						},
						"externalCrossReferences": {
							"type": "array",
							"uniqueItems": true,
							"items": {
								"type": "object",
								"required": [
									"externalCrossReference_id",
									"objectId"
								],
								"properties": {
									"externalCrossReference_id": {
										"type": "string"
									},
									"objectId": {
										"type": "string"
									}
								},
								"additionalProperties": false
							}
						}
					}
				},
				"conformation_id": {
					"type": "string"
				},
				"regulatedEntity": {
					"type": "object",
					"required": ["_id", "type"],
					"properties": {
						"_id": {
							"type": "string"
						},
						"type": {
							"type": "string",
							"enum": ["gene", "srna", "promoter", "transcription-unit"]
						}
					},
					"additionalProperties": false
				},
				"evidenceReferences": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"anyOf": [{
							"required": ["publication_id"]
						}, {
							"required": ["evidence_id"]
						}],
						"properties": {
							"publication_id": {
								"type": "string"
							},
							"evidence_id": {
								"type": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"externalCrossReferences": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": [
							"externalCrossReference_id",
							"objectId"
						],
						"properties": {
							"externalCrossReference_id": {
								"type": "string"
							},
							"objectId": {
								"type": "string"
							}
						},
						"additionalProperties": false
					}
				},
				"organism_id": {
					"type": "string"
				},
				"internalComment": {
					"type": "string"
				},
				"schemaVersion": {
					"type": "number"
				}
			},
			"additionalProperties": false
		}
	},
	"validationLevel": "strict",
	"validationAction": "error"
}